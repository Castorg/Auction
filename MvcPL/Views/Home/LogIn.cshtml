@using CustomORM
@model dynamic

@{
    ViewBag.Title = "title";
}
<link rel="stylesheet" type="text/css" href="@Url.Content("/Content/CSS/StyleSheet1.css")">
<body>
    <div class="center color_text">
        <h2 class="color_text">
            Войдите, если Вы зарегестрированный участник. Иначе перейдите в раздел
            @Html.ActionLink("Регистрация", "Reg" ,  "Accout");
        </h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset class="color_text">
                <legend>RegistrationViewModel</legend>

                <div>
                    <input id="term" height="20" class="button_maggin_border main_menu" placeholder="Введите логин" type="text" size="40" />
                </div>
                <div class="color_text">
                    <input id="term" height="20" class="button_maggin_border main_menu" placeholder="Введите пароль" type="text" size="40" />
                </div>
                <div class="color_text">
                    <input id="term" height="20" class="button_maggin_border main_menu" placeholder="Подтвердите пароль" type="text" size="40" />
                </div>
                <div class="editor-label">
                    Html.LabelFor(model => model.Role)
                </div>
                <div class="editor-field">
                    Html.DropDownListFor(model => model.Role,
                    new SelectList(Enum.GetNames(typeof(Role))), string.Empty)
                </div>
                <p>
                    <input type="submit" value="Войти" />
                </p>
            </fieldset>
        }

        <div>
            @Html.ActionLink("На главную страницу", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</body>
