@model MvcPL.Models.LogInModel

@{
    ViewBag.Title = "title";
}
<link rel="stylesheet" type="text/css" href="@Url.Content("/Content/CSS/StyleSheet1.css")">
<body>
    <div class="center color_text">
        <h2 class="color_text">
            Войдите, если Вы зарегистрированный участник. Иначе перейдите в раздел
            @Html.ActionLink("Регистрация", "Reg" ,  "Account");
        </h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset class="color_text">
                <legend>RegistrationViewModel</legend>

                <div class="editor-label offset_custom color_text">
                    @Html.LabelFor(model => model.Login)
                </div>
                <div class="editor-field offset_custom margin_field">
                    @Html.EditorFor(model => model.Login)
                    @Html.ValidationMessageFor(model => model.Login)
                </div>

                <div class="editor-label offset_custom color_text">
                    @Html.LabelFor(model => model.Password)
                </div>
                <div class="editor-field offset_custom margin_field">
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
                
                

                <p>
                    <input type="submit" value="Войти" />
                </p>
            </fieldset>
        }

        <div>
            @Html.ActionLink("На главную страницу", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</body>
